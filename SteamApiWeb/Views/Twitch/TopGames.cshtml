@using SteamBetterWeb.ViewModels.Twitch
@model TopGamesViewModel


<h4>Testing</h4>
<h3>Top games, @Model.Pagination.Cursor</h3>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Data.First().Id)</th>
        <th>@Html.DisplayNameFor(m => m.Data.First().Name)</th>
        <th>@Html.DisplayNameFor(m => m.Data.First().BoxArtUrl)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    
        @foreach (var d in Model.Data)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.Name</td>
                <td><img src="@d.BoxArtUrl.Replace("{width}","50").Replace("{height}","50")"/></td>
                <td>
                    @Html.ActionLink("Games", "Streams", new { gameId = d.Id })
                </td>

            </tr>

        }

    

    </tbody>
</table>
